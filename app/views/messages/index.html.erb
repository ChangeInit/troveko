<div class="container margin-top">
  <center><div class="conversationbox">
    <br>
    <center> <h1>Conversations</h1></center>

    <% @messages.each do |message| %>
    <div class="message" align="left">
      <% if message.header %>
      <% user = User.find(message.user_id) %>
      <%= image_tag facebook_image(user), class: "avatar-large" %>
      <div class="message-name">
        <h3><%= "#{user.first_name} #{user.last_name}" %></h3>
        <p><%= message.message_time %></p>
      </div>
      <div class="message-body">
        <p><strong><%= message.header %></strong></p>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>

<% end %>
</div></center>
<%= render 'messages/form' %>
</div>

