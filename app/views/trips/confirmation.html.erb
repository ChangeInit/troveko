<div class="container" id="picturerow">
  <div class="row" id="experience">

    <div class="col-l-4 col-md-6-col-xs-12 col-sm-4" id="picture">
      <div class="hvrbox">
        <img src="<%= cl_image_path @trip.experience.photos.first.path %>">
      </div>
    </div>

    <div class="col-l-8-col-xs-12 col-sm-4" id="tripsummary">
      <h1><%= link_to @trip.experience.title, experience_path(@trip.experience) %></h1>
      <h2><%= @experience.short_description %></h2>
      <br>
      <h3>You're much closer to meeting the host on <%= @trip.start_date.strftime("%m/%d/%y") %></h3>
      <h4>Trip Total: <%=money_without_cents_and_with_symbol(@trip.experience.price) %> per person</h4>
      <h4>Fund Contribution: <%= money_without_cents_and_with_symbol(@trip.contribution.amount) %> </h4>
    </div>
  </div>
  </div>


<div class="container">
  <h1>Pay For Your Trip</h1>
  <h3>Upon successful payment you will be redirected to a confirmation page.</h3>

   <div class="row" style="display: flex; align-items: center;">
      <div class="col-lg-6 col-md-6-col-xs-12 col-sm-12">
          <h4>Trip Total: <%=money_without_cents_and_with_symbol(@trip.experience.price) %> per person</h4>
          <h4>Fund Contribution: <%= money_without_cents_and_with_symbol(@trip.contribution.amount) %> </h4>
      </div>
      <div class="col-lg-6 col-md-6-col-xs-12 col-sm-12" id="payment-stripe">
        <%= render 'payments/new'  %>
      </div>
    </div>
</div>




