<div class="container" id="picturerow">
  <div class="row" id="experience">
    <div class="col-l-4 col-md-6-col-xs-12 col-sm-4" id="picture">
      <div class="hvrbox">
        <img src="<%= image_path("stones.JPG") %>">
        </div>
    </div>
    <div class="col-l-8-col-xs-12 col-sm-4" id="tripsummary">
        <h1><%= @experience.title %></h1>
        <h4><%= @experience.short_description %></h4>
        <h3>You're much closer to meeting the host from <%= @trip.start_date %> to <%= @trip.start_date %></h3>
    </div>

</div>
</div>


<div class="banner" style="background-image:     linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url('<%= image_path("banner.jpg") %>');">
  <div class="banner-content">
    <h1>Impact Through Adventure</h1>
    <h2>How it Works</h2>
  </div>
</div>

<!-- trip info page -->



<div
<p>Booking Date:  <%= @trip.created_at %></p>
<p>Start Date: <%= @trip.start_date %></p>
<p>End Date:  <%= @trip.end_date %></p>
<p>Length: <%= (@trip.end_date - @trip.start_date).to_i %> nights</p>
<p>Price:  <%= money_without_cents_and_with_symbol(@trip.experience.price) %></p>
<p>Total: <%= @trip.experience.price  *  (@trip.end_date - @trip.start_date).to_i %></p>


<div class="container">

  <div class="row">
    <center><h1 class=highlight>Booking Sent</h1></center>

    <center><h3>Your booking at <%= link_to @trip.experience.title, experience_path(@trip.experience) %> has been sent to host for approval!!</h3></center>
    <br>
  </div>

<div class="row">

  <div class="wrapper" id="itinerary">

    <div class="col-md-4">
      <div class="centered-item">
        <h3>Booking Details</h3>

        <strong><p>Start Date:</strong> <%= @trip.start_date %></p>
        <strong><p>End Date:</strong>  <%= @trip.end_date %></p>
        <strong><p>Length:</strong> <%= (@trip.end_date - @trip.start_date).to_i %> nights</p>
        <strong><p>Price:</strong>  $<%=@trip.experience.price %></p>
        <strong><p>Total:</strong> $<%= @trip.experience.price  *  (@trip.end_date - @trip.start_date).to_i %></p>

      </div>
    </div>
    </div>
    <!-- traveler info -->

    <div class="row">
    <%= @trip.user.first_name %>
    <%= @trip.user.last_name %>
    <%= @trip.user.email %>


    <!-- links and paths for page -->

    <%= link_to @trip.experience.title, experience_path(@trip.experience) %>
  </div>



    <div class="row">
    <div class="col-md-8">
      <% if @trip.experience.photos.any? %>
      <%= cl_image_tag @trip.experience.photos.first.path %>
      <% end %>
    </div>
    </div>

  </div>
  <br>
  <div class="row">
    <center><h4>Thanks <%= @trip.user.first_name %> for choosing Troveko! We have sent a confirmation to <%= @trip.user.email %>.</h4></center>
    <br>
  </div>

</div>
