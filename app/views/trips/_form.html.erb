<div class= "container">
  <div class="row">
    <%= simple_form_for [@experience, @trip], html: { class: "form-horizontal" } do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :first_name, input_html: { value: current_user.first_name } %>
      <%= f.input :last_name, input_html: { value: current_user.last_name } %>
      <%= f.input :start_date, as: :string %>
      <%= f.input :end_date, as: :string %>
   </div>

   <div class="form-actions text-center">
    <%= f.button :submit, 'Book Your Experience' %>
  </div>
  <% end %>
</div>
<%= link_to "Back to Experience", experience_path(@experience) %>
</div>
