<div class="row">
    <%= simple_form_for [@experience, @trip], html: { class: "form-horizontal" } do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <h3>Traveler Details</h3>
      <%= f.input :first_name, input_html: { value: current_user.first_name } %>
      <%= f.input :last_name, input_html: { value: current_user.last_name } %>
      <%= f.input :start_date, as: :string %>
    </div>

    <div class="form-inputs">
      <%= f.input :contribution, placeholder: "Suggested: $20" %>
    </div>

    <h3>Terms and Conditions</h3>
    <div class="termsx">
      <%= render 'terms_and_conditions' %>
    </div>

    <input type="checkbox" name="terms" id="terms" onchange="activateButton(this)">  I have read and agree to the terms and conditions

   <div class="form-actions text-center">
    <%= f.button :submit, 'Make Your Payment' %>
  </div>
  <% end %>
  <%= link_to "Go Back to Experience", experience_path(@experience) %>
</div>


