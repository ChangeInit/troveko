<div class="<%= yield(:sticky_navbar).blank? ? 'navbar-troveko-sticky' : yield(:sticky_navbar) %> navbar-troveko">
  <div class="navbar-inner">

  <!-- Logo -->
    <%= link_to root_path, class: " navbar-left navbar-troveko-brand" do %>
    <%= image_tag "troveko-logo.png" %>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-troveko-right hidden-xs hidden-sm">
    <form id="demo-2" form action="<%= experiences_path %>">
      <input type="search" name="query" placeholder="Where are you going">
    </form>
    <%= link_to "Experiences", experiences_path, class: "navbar-troveko-item navbar-troveko-link" %>
    <%= link_to "About", about_path, class: "navbar-troveko-item navbar-troveko-link" %>
    <%#= link_to "Messages", messages_path, class: "navbar-troveko-item navbar-troveko-link" %>
    <% if user_signed_in? %>
      <%#= link_to "Messages #{current_user.unread_messages}", profile_path(current_user, reload: true, anchor: 'messages'), class: "navbar-troveko-item navbar-troveko-link" %>
      <% end %>

      <%= link_to "Blog", "http://www.troveko.blog", class: "navbar-troveko-item navbar-troveko-link", target: :_blank %>
      <% if user_signed_in? %>
        <%= link_to "Profile", profile_path(current_user), class: "navbar-troveko-item navbar-troveko-link" %>
        <%= link_to destroy_user_session_path, method: :delete, class: "navbar-troveko-item navbar-troveko-link" do %>
        <%= t(".sign_out", default: "Log out") %>
      <% end %>
      <!-- Avatar with dropdown menu -->

      <%= image_tag facebook_image(current_user), class: "avatar dropdown-toggle", id: "navbar-troveko-menu" %>
    <% else %>
      <%= link_to new_user_session_path, class: "navbar-troveko-item navbar-troveko-link" do %>
        <strong>Sign in</strong>
      <% end %>
      <%= link_to new_user_registration_path, class: "navbar-troveko-item navbar-troveko-link" do %>
        <strong>Register</strong>
      <% end %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-troveko-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="trov-dropdown-menu dropdown-menu-right navbar-troveko-dropdown-menu">
        <li><%= link_to "Experiences", experiences_path %></li>
        <!-- <li><%#= link_to "Messages", conversations_path %></li> -->
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Register", new_user_registration_path %></li>
        <li><%= link_to "Sign In", new_user_session_path %></li>
        <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
        <li><%= link_to "Profile", profile_path(current_user) if current_user != nil %></li>
      </ul>
    </div>
  </div>
</div>

