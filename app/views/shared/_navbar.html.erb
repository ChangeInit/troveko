<div class="<%= yield(:sticky_navbar).blank? ? 'navbar-troveko-sticky' : yield(:sticky_navbar) %> navbar-troveko">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-troveko-brand" do %>
    <%= image_tag "troveko-logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-troveko-right hidden-xs hidden-sm">


    <!-- Links -->
    <% if user_signed_in? %>

      <form action="<%= root_path %>" class="form-inline">

        <input type="text" name="query" placeholder="&nbsp Search">
      </form>

      <%= link_to "List Causes", root_path, class: "navbar-troveko-item navbar-troveko-link" %>

      <%#= link_to "Bunkers", bunkers_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Experiences", root_path, class: "navbar-troveko-item navbar-troveko-link" %>
      <%= link_to "Messages", root_path, class: "navbar-troveko-item navbar-troveko-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-troveko-item">
        <div class="dropdown">

          <%#= image_tag facebook_image(current_user), class: "avatar dropdown-toggle", id: "navbar-troveko-menu", "data-toggle" => "dropdown" %>

          <ul class="dropdown-menu dropdown-menu-right navbar-troveko-dropdown-menu">
            <!-- <li>
              <%#= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <%# end %>
            </li> -->
            <!-- <li>
              <%#= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <%# end %>
            </li> -->
             <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-superpowers"> NGO Interface</i>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>
      <%= link_to new_user_session_path, class: "navbar-troveko-item navbar-wagon-link" do %>
        <strong>Sign in</strong>
      <% end %>
      <%= link_to new_user_registration_path, class: "navbar-troveko-item navbar-wagon-link" do %>
        <strong>Register</strong>
      <% end %>
    <% end %>


  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-troveko-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-troveko-dropdown-menu">
        <li><%= link_to "Cause", root_path %></li>
        <li><%= link_to "Experiences", root_path %></li>
        <li><%= link_to "Messages", root_path %></li>
      </ul>
    </div>
  </div>
</div>
