<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login">
        <h2>Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

<!-- <label class="toggle-check">
  <input type="checkbox" class="toggle-check-input" />
  <span class="toggle-check-text"></span>
</label>
 -->
          <div class="form-inputs">
            <%= f.input :first_name, required: true, autofocus: true, placeholder: "First Name" %>
            <%= f.input :last_name, required: true, autofocus: true, placeholder: "Last Name" %>
            <%= f.input :email, required: true, autofocus: true, placeholder: "user@mail.com" %>
            Are you an non-profit organization?
            <%= f.input :ngo, label: false, class: "form-control" %>
<!--             <label class="toggle-check">

  <input type="checkbox" class="toggle-check-input" />
  <span class="toggle-check-text"></span>
</label>
 -->
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "******" %>
            <%= f.input :password_confirmation, required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
            <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn-primary btn #{provider}" %><br />
            <% end -%>
            <% end -%>

          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
