<div class="row">

  <div class="col-xs-12 col-md-4">

    <div class="profile-info">
      <h2> <%= @user.first_name %> </h2>
       <%= image_tag facebook_image(@user), class: "profile-image" %>

      <div class="edit_profile">
        <p>Email: <%= current_user.email %></p>
        <%= link_to "Edit profile", root_path %>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-md-8">
    <div class="profile-activity">
      <div class="my-row">
        <%= image_tag('http://fillmurray.com/100/100', :class => "profile-icon flex-item") %>
        <h2 class="flex-item">My host profile</h2>
       </div>

      <!-- From Boostrap  - other features here https://getbootstrap.com/docs/3.3/javascript/#tabs
      -->
      <!-- Tab menu -->
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a class="tab" href="#booking" aria-controls="requests" role="tab" data-toggle="tab">Booking Requests</a></li>
        <li role="presentation"><a href="#confirmed" aria-controls="confirmed" role="tab" data-toggle="tab">Confirmed customers</a></li>
        <li role="presentation"><a href="#meals" aria-controls="meals" role="tab" data-toggle="tab">My trips</a></li>

      </ul>
      <!-- Tab content -->
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane active no-border" id="booking">
          <% if @ngo_trips.empty? %>

            <div class="activity empty">
              <p>Oh no you don't have any bookings yet ðŸ˜¢ </p> <br>
              <p>Use social media to promote your experiences or create a new one <%= link_to "here", new_experience_path %></p>
            </div>

          <% else %>

            <div class="activity">

              <% @ngo_trips.each do |trip| %>
               <div class="booking">
                <% if trip.status? == false %>
                <div class="booking-confirm">
               <%= cl_image_tag trip.experience.photos[0].path, {:class => "profile-image", :effect=>"auto_color", :width=>50} %>
              <%= link_to "#{trip.experience.title}", experience_path(trip.experience), class: "meal-link" %>
              <br>


                <%= link_to "Confirm", trip_path(trip: trip, status: true), method: :patch, class: "meal-link btn btn-primary end" %>
              </div>
               <p class="date"><%=  trip.created_at%></p>

              <% end %>
              </div>

              <% end %>

            </div>
          <% end %>
        </div>
          <div role="tabpanel" class="tab-pane no-border" id="confirmed">
            <div class="activity empty">
               <% @ngo_trips.each do |trip| %>
               <div class="booking-content">
                <% if trip.status? == true %>

                <div class="booking-confirm">
               <%= cl_image_tag trip.experience.photos[0].path, {:class => "profile-image", :effect=>"auto_color", :width=>50} %>
              <%= link_to "#{trip.experience.title}", experience_path(trip.experience), class: "meal-link" %>


                <%#= link_to "Cancel", booking_path(booking, cancel: true), method: :patch, class: "meal-link btn btn-info end" %>
              </div>
              <% end %>
              </div>
              <% end %>
            </div>
        </div>
         <div role="tabpanel" class="tab-pane no-border" id="meals">
            <div class="activity empty">
              <% @experiences.each do |experience| %>
               <div class="booking-content">
              <%= cl_image_tag experience.photos[0].path, {:class => "profile-image", :effect=>"auto_color", :width=>50} %>
              <%= link_to "#{experience.title}", experience_path(experience), id: "meal-link" %>

              </div>
              <% end %>
              <%= button_to "Add new experience", new_experience_path, :method => :get, class: "btn btn-primary", id: "meal-button" %>

            </div>
        </div>
      </div>
    </div>
  </div>
</div>
