<%= simple_form_for(@experience) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :price %>
    <%= f.input :capacity %>
    <%= f.input :short_description %>
    <%= f.input :long_description %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :postal_code %>
    <%= f.country_select :country, priority_countries: ["GB", "US", "DE"] %>
    <%= f.collection_check_boxes :feature_ids, Feature.all, :id, :name %>
    <%= f.input :photos, as: :attachinary %>
  </div>

    <div class="form-actions text-center">
      <%= f.button :submit %>
    </div>
<% end %>


